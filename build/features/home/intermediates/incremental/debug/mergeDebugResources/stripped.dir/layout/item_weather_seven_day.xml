<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/llBgStyleItem"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="@dimen/dp_8"
    android:layout_marginTop="@dimen/dp_4"
    android:gravity="center"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:gravity="center"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imvIconWeather"
            android:layout_width="@dimen/dp_32"
            android:layout_height="@dimen/dp_32"
            android:src="@drawable/ic_rain_snow"/>
    </LinearLayout>

    <vn.techres.android.weather.widget.AppTextViewBold
        android:id="@+id/tvDay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14"
        tools:text="Hôm nay"/>
    <vn.techres.android.weather.widget.AppTextViewBold
        android:id="@+id/tvDeceptionWeather"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/dp_4"
        android:layout_weight="1.5"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14"
        android:gravity="center"
        tools:text="Mưa lớn"/>
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5">
        <vn.techres.android.weather.widget.AppTextView
            android:id="@+id/tvTemperatureDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            tools:text="30" />

        <vn.techres.android.weather.widget.AppTextView
            android:id="@+id/tvUnitTemperatureDay"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="top"
            android:layout_marginStart="@dimen/dp_2"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12"
            tools:text="\u2103" />

        <vn.techres.android.weather.widget.AppTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/sec"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            android:layout_marginHorizontal="@dimen/dp_2"/>

        <vn.techres.android.weather.widget.AppTextView
            android:id="@+id/tvTemperatureNight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            tools:text="20" />

        <vn.techres.android.weather.widget.AppTextView
            android:id="@+id/tvUnitTemperatureNight"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="top"
            android:layout_marginStart="@dimen/dp_2"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12"
            tools:text="\u2103" />
    </LinearLayout>


</LinearLayout>