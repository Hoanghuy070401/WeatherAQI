<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:gravity="center"
        android:paddingHorizontal="@dimen/dp_20">

        <LinearLayout
            android:id="@+id/llStyleWeather"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/dp_8"
            android:paddingHorizontal="@dimen/dp_4"
            android:background="@drawable/bg_boder_gray"
            android:orientation="vertical"
            tools:ignore="UselessParent">


            <LinearLayout
                android:padding="@dimen/dp_4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imvWeather"
                        android:layout_width="0dp"
                        android:layout_weight="0.4"
                        android:layout_height="@dimen/dp_50"
                        tools:src="@drawable/images"/>

                    <vn.techres.android.weather.widget.AppTextView
                        android:id="@+id/tvWeather"
                        android:layout_width="0dp"
                        android:layout_weight="1.6"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_8"
                        android:layout_marginVertical="@dimen/dp_16"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_16"
                        tools:text="fhjdshgjfghjhgsdfhjgdfhjgghjdjfgjhkfdjhgjhfdjhjfhkgjhfdjhdfjhkghjfdhjgfdhjjhjfdghjfdhj"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imvAQI"
                        android:layout_width="0dp"
                        android:layout_weight="0.4"
                        android:layout_height="wrap_content"
                        tools:src="@drawable/images"/>

                    <vn.techres.android.weather.widget.AppTextView
                        android:id="@+id/tvAQI"
                        android:layout_width="0dp"
                        android:layout_weight="1.6"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_8"
                        android:layout_marginVertical="@dimen/dp_16"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_16"
                        tools:text="fhjdshgjfghjhgsdfhjgdfhjgghjdjfgjhkfdjhgjhfdjhjfhkgjhfdjhdfjhkghjfdhjgfdhjjhjfdghjfdhj"/>
                </LinearLayout>


            </LinearLayout>



        </LinearLayout>
    </LinearLayout>
</layout>