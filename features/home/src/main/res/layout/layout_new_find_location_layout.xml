<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_8"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:id="@+id/rlHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginStart="@dimen/dp_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <vn.techres.android.weather.widget.AppTextViewBold
                android:id="@+id/tvCityName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/gray_900"
                tools:text="Hà Nội"/>

            <vn.techres.android.weather.widget.AppTextView
                android:id="@+id/tvDetailCity"
                android:textSize="@dimen/sp_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Hà Nội , Việt Nam"/>
        </LinearLayout>
        <LinearLayout
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_4"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <vn.techres.android.weather.widget.AppTextView
                android:id="@+id/tvAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/city_added"
                android:drawableEnd="@drawable/ic_action_right"
                android:drawableTint="@color/gray_400"
                android:visibility="gone"/>
            <LinearLayout
                android:id="@+id/llAdd"
                android:layout_width="wrap_content"
                android:padding="@dimen/dp_4"
                android:layout_marginEnd="@dimen/dp_12"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imvAdd"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:src="@drawable/ic_add_circle"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_marginTop="@dimen/dp_8"
        android:layout_below="@+id/rlHeader"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/gray_300"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvListFiveDays"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_below="@+id/rlHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/item_five_day"/>
    <View
        android:layout_marginTop="@dimen/dp_8"
        android:layout_below="@+id/rcvListFiveDays"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/gray_300"/>
</RelativeLayout>