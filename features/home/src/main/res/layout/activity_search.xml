<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.SearchActivity">
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_32"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.SearchView
            android:id="@+id/acSearch"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_38"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@drawable/bg_border_gray_300"
            android:backgroundTint="@color/gray_200"
            android:gravity="center_vertical"
            android:theme="@style/SearchView"
            app:closeIcon="@drawable/ic_cross"
            app:iconifiedByDefault="false"
            app:queryBackground="@android:color/transparent"
            app:queryHint="@string/search"
            app:searchIcon="@drawable/ic_search"
            app:showAsAction="always" />
        <ProgressBar
            android:id="@+id/pgbSearch"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp_85"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_30"
            android:visibility="gone"/>

        <vn.techres.android.weather.widget.AppTextView
            android:id="@+id/tvCancel"
            android:text="@string/cancel"
            android:layout_toEndOf="@+id/acSearch"
            android:layout_centerVertical="true"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/blue_700"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvSuggest"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvListLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <vn.techres.android.weather.widget.AppTextView
        android:id="@+id/noData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_data"
        android:layout_gravity="center"
        android:visibility="gone"/>
    <include
        android:id="@+id/ilLayoutFind"
        android:visibility="gone"
        layout="@layout/layout_new_find_location_layout"/>


</LinearLayout>