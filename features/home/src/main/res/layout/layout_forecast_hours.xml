<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_border_button_8dp_gray_200"
    android:backgroundTint="@color/gray_200_50"
    android:layout_margin="@dimen/dp_16"
    android:orientation="vertical">

    <vn.techres.android.weather.widget.AppTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/one_day_hour_forecast"
        android:textColor="@color/gray_200"
        android:paddingVertical="@dimen/dp_8"
        android:textSize="@dimen/sp_16" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvListWeatherHours"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/dp_8"
        android:paddingHorizontal="@dimen/dp_16"/>
</LinearLayout>
